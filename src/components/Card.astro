---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="bg-middle flex rounded-md link-card">
	<a href={href} class="p-5">
		<h2 class="font-bold">
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
<style>
	.link-card {
		z-index: 1;
		position: relative;
		font-size: inherit;
		font-family: inherit;
		//color: white;
		padding: 0.5em 1em;
		outline: none;
		border: none;
		//background-color: hsl(236, 32%, 26%);
		overflow: hidden;
		transition: color 0.4s ease-in-out;
	}

	.link-card::before {
		content: '';
		z-index: -1;
		position: absolute;
		top: 100%;
		right: 100%;
		width: 6rem;
		height: 1.5em;
		border-radius: 50%;
		background-color: #78CA9D;
		transform-origin: center;
		transform: translate3d(50%, -50%, 0) scale3d(0, 0, 0);
		transition: transform 0.45s ease-in-out;
	}

	.link-card:hover {
		cursor: pointer;
		color: #0E121D;
	}

	.link-card:hover::before {
		transform: translate3d(50%, -50%, 0) scale3d(15, 15, 15);
	}
</style>
